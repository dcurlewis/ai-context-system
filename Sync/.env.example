# Jira Configuration
# Get an API token from https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_EMAIL=your.email@company.com
JIRA_API_TOKEN=your-api-token-here
JIRA_BASE_URL=https://your-company.atlassian.net

# GitHub Configuration
# Create a PAT at https://github.com/settings/tokens with `repo` scope
GITHUB_TOKEN=ghp_xxxxxxxxxxxx

# Slack Configuration
# Extract session token from browser DevTools console on Slack:
#   JSON.parse(localStorage.getItem('localConfig_v2')).teams[
#     Object.keys(JSON.parse(localStorage.getItem('localConfig_v2')).teams)[0]
#   ].token
SLACK_SESSION_TOKEN=xoxc-your-session-token-here
# Extract 'd' cookie (required for xoxc- tokens) from DevTools console:
#   document.cookie.split('; ').find(c => c.startsWith('d=')).slice(2)
# Or: DevTools > Application > Cookies > https://app.slack.com > 'd'
SLACK_COOKIE_D=your-d-cookie-value-here
SLACK_WORKSPACE_URL=https://your-workspace.slack.com
